# oh my zsh path
include () {
    [[ -f "$1" ]] && source "$1"
}

# load own bash stuff
include $HOME/.secret
include $HOME/dotfiles/zsh/exports
include $HOME/dotfiles/zsh/aliases

# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
ZSH_THEME="af-magic"

# plugins
plugins=(git docker tig bash-completion zsh-completion)

# load oh-my-zsh
include $HOME/.oh-my-zsh/oh-my-zsh.sh

# load auto completions
include <(kubectl completion zsh)
include <(helm completion zsh)
include <(kompose completion zsh)
include $HOME/dotfiles/zsh/tmuxinator.zsh

# Makefile completion
zstyle ':completion:*:make:*:targets' call-command true
zstyle ':completion:*:make::' tag-order targets
zstyle ':completion:*' group-name ''
zstyle ':completion:*:descriptions' format '%B%d%b'
#zstyle ':completion:*' group-name ''
#zstyle ':completion:*:descriptions' format '%B%d%b'
